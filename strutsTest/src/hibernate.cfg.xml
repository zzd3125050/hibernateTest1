<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

    <session-factory>
    	<!-- 第一部分 数据库配置信息！ -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/struts?serverTimezone=GMT%2B8&amp;useSSL=false&amp;rewriteBatchedStatements=true
		</property>
		<property name="hibernate.connection.username">zzd</property>
		<property name="hibernate.connection.password">3125050</property>
	
		<!-- 第二部分 配置hibernate信息，可选 -->
		<property name="hibernate.show_sql">true</property>
		<!-- 是否输入底层SQL语句 -->
		<property name="hibernate.format_sql">true</property>
		<!-- 输出底层SQL语句格式化 -->
		<!-- hibernate帮创建表，需要配置之后	update：如果已经有表，更新，如果没有，创建 -->
		<property name="hibernate.hbm2ddl.auto">update</property>
	
		<!-- 配置数据库方言
			在mysql数据库中实现分页关键字limit，只能用mysql里面
			在oracle数据库，实现分页rownum
			让hibernate框架识别不同数据库自己特有的语句
		-->
		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQL5Dialect
		</property>
	
		<property name="hibernate.current_session_context_class">
			thread
		</property>
	
		<!-- 第三部分，把映射文件放到核心配置文件中  必须的 -->
    	<mapping resource="/zzd/entity/Customer.hbm.xml"/>
    	
    </session-factory>

</hibernate-configuration>